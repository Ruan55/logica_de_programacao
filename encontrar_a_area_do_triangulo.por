programa {
  funcao inicio() {
   // Aplicando as variáveis
    real base, altura, area
    
    // Pedindo ao usuario o valor da base e da altura
    escreva("Digite o valor da base: ")
    leia(base)
    limpa()
    escreva("Digite o valor da altura: ")
    leia(altura)
    limpa()
    
    // Calculo para encontrar a área
    area = (base * altura)/2

    //Imprimindo no terminal o resultado
    escreva("Area é: ", area)
    
      
  }
}
